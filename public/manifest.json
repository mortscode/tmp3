{
  "manifest_version": 2,
  "name": "The Modern Proper",
  "short_name": "TMP",
  "version": "3.0",

  "default_locale": "en",
  "description": "Our mission is to reinvent proper for the modern homemaker. We create and photograph delicious recipes for you to make and share with your loved ones.",
  "icons": [
    {
      "src": "favicon-16x16.png",
      "sizes": "16x16",
      "type": "image/png"
    },
    {
      "src": "favicon-32x32.png",
      "sizes": "32x32",
      "type": "image/png"
    },
    {
      "src": "favicon-96x96.png",
      "sizes": "96x96",
      "type": "image/png"
    }
  ],
  "start_url": "/",
  "display": "fullscreen",
  "orientation": "portrait",
  "background_color": "#F2F2F2",
  "theme_color": "#F2F2F2"
}
